{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "fhx",
	"scopeName": "source.fhx",
	"patterns": [
		{ "include": "#meta_data" },
		{ "include": "#module_instances" },
		{ "include": "#blocks" },
		{ "include": "#keywords" },
		{ "include": "#assignments" },
		{ "include": "#strings" },
		{ "include": "#numbers" },
		{ "include": "#booleans" }
	],
	"repository": {
		"blocks": {
		"patterns": [
			{
			"name": "punctuation.section.block.fhx",
			"match": "[{}]"
			}
		]
		},
		"keywords": {
		"patterns": [
			{
			"name": "keyword.control.fhx",
			"match": "\\b(SCHEMA|LOCALE|ATTRIBUTE_INSTANCE|VALUE|FUNCTION_BLOCK|ATTRIBUTE|FBD_ALGORITHM|WIRE)\\b"
			}
		]
		},
		"assignments": {
		"patterns": [
			{
				"name": "variable.other.assignment.fhx",
				"match": "\\b[A-Z0-9_/]+(?=\\s*=)"
			},
			{
				"name": "keyword.operator.assignment.fhx",
				"match": "\\s*=\\s?"
			}
		]
		},
		"strings": {
		"patterns": [
			{
			"name": "string.quoted.double.fhx",
			"begin": "\"",
			"end": "\""
			}
		]
		},
		"numbers": {
		"patterns": [
			{
			"name": "constant.numeric.fhx",
			"match": "\\b\\d+\\b"
			}
		]
		},
		"booleans": {
		"patterns": [
			{
			"name": "constant.language.boolean.fhx",
			"match": "\\b(T|F|NONE)\\b"
			}
		]
		},
		"module_instances": {
		"patterns": [
			{
			"name": "entity.name.class",
			"match": "^\\bMODULE_INSTANCE\\b|^\\bMODULE\\b"
			}
		]
		},
		"meta_data": {
		"patterns": [
			{
			"name": "variable.other.constant",
			"match": "user=|time="
			}
		]
		}
	}
}